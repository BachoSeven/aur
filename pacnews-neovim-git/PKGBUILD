# Maintainer: BachoSeven < ascoli dot minnocci at gmail dot com >
pkgname=pacnews-neovim-git
pkgver=0.0.2
pkgrel=1
pkgdesc="Find .pacnew files and merge them with a neovim diff"
arch=(any)
url=""
license=('unknown')
makedepends=('git')
provides=('pacnews')
conflicts=('pacnews-git')
source=("pacnews")
md5sums=('SKIP')

package() {
  cd "${srcdir}"
  mkdir -p "${pkgdir}/usr/bin"
  install pacnews "${pkgdir}/usr/bin/"
}

